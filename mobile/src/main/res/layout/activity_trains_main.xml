<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ws.mahesh.travelassist.beta.trains.TrainsMainActivity">

    <include layout="@layout/default_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/travel_now_finder"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageViewTravelNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:padding="4dp"
                    android:src="@drawable/train2" />

                <TextView
                    android:id="@+id/textViewTravelNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Travel Now" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/train_finder_activity"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageViewTrainsRouteFinder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:padding="4dp"
                    android:src="@drawable/train2" />

                <TextView
                    android:id="@+id/textViewTrainsRouteFinder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Route Finder" />

            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

</LinearLayout>
